{
    "family": "risk-assessment-service-task",
    "executionRoleArn": "<EXECUTION_ROLE_ARN>",
    "taskRoleArn": "<TASK_ROLE_ARN>",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "1024",
    "memory": "2048",
    "containerDefinitions": [
        {
            "name": "risk-assessment-service",
            "image": "463470963000.dkr.ecr.eu-west-2.amazonaws.com/risk-assessment-service",
            "portMappings": [
                {
                    "containerPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "DYNAMODB_TABLE",
                    "value": "DYNAMODB_TABLE_NAME"
                },
                {
                    "name": "AURORA_HOST",
                    "value": "AURORA_ENDPOINT"
                },
                {
                    "name": "S3_BUCKET",
                    "value": "INSURANCE_BUCKET_ID"
                }
            ]
        },
        {
            "name": "xray-daemon",
            "image": "amazon/aws-xray-daemon",
            "essential": false,
            "portMappings": [
                {
                    "containerPort": 2000,
                    "protocol": "udp"
                }
            ]
        }
    ]
}