{
    "family": "fraud-detection-engine-task",
    "executionRoleArn": "EXECUTION_ROLE_ARN",
    "taskRoleArn": "TASK_ROLE_ARN",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "1024",
    "memory": "2048",
    "containerDefinitions": [
        {
            "name": "fraud-detection-engine",
            "image": "<IMAGE>",
            "portMappings": [
                {
                    "containerPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "DYNAMODB_TABLE",
                    "value": "DYNAMODB_TABLE_NAME"
                },
                {
                    "name": "AURORA_HOST",
                    "value": "AURORA_ENDPOINT"
                },
                {
                    "name": "S3_BUCKET",
                    "value": "INSURANCE_BUCKET_ID"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "aws/fargate/fraud-detection-engine",
                    "awslogs-region": "eu-west-2",
                    "awslogs-stream-prefix": "fraud"
                }
            }
        },
        {
            "name": "xray-daemon",
            "image": "amazon/aws-xray-daemon",
            "essential": false,
            "portMappings": [
                {
                    "containerPort": 2000,
                    "protocol": "udp"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "XRAY_LOG_GROUP",
                    "awslogs-region": "eu-west-2",
                    "awslogs-stream-prefix": "xray"
                }
            }
        }
    ]
}